    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'raytrace'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=raytrace",
                    "--package=raytrace"
                ],
                "filter": {
                    "name": "raytrace",
                    "kind": "bin"
                }
            },
            "args": ["-s", "1", "-o", "output.ppm"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'raytrace' (Earth scene)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=raytrace",
                    "--package=raytrace"
                ],
                "filter": {
                    "name": "raytrace",
                    "kind": "bin"
                }
            },
            "args": ["-s", "16", "-m", "-o", "output.ppm", "--scene", "earth"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'raytrace'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=raytrace",
                    "--package=raytrace"
                ],
                "filter": {
                    "name": "raytrace",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'raytrace' (multithreaded)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=raytrace",
                    "--package=raytrace"
                ],
                "filter": {
                    "name": "raytrace",
                    "kind": "bin"
                }
            },
            "args": ["-s", "16", "-m", "-o", "output.ppm"],
            "cwd": "${workspaceFolder}"
        }
    ]
}